{
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "jquery": true
    },
    "extends": ["prettier"],
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": ["prettier", "dollar-sign"],
    "rules": {
        "dollar-sign/dollar-sign": [2, "ignoreProperties"],
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "no-unused-vars": 1,
        "jsx-quotes": [1, "prefer-double"]
    }
}
